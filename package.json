{
  "private": true,
  "scripts": {
    "dev": "run-p serve watch",
    "serve": "live-server public --host=localhost --port=3000 --no-browser",
    "compile": "sass sass:public/assets/styles --no-charset",
    "watch": "npm run compile -- --watch --update",
    "optimize": "npm run compile -- --style compressed --no-source-map",
    "build": "run-s clear optimize",
    "clear": "rimraf -rf public/assets/styles"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
